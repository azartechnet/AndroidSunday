        android:inputType="textPassword"
        tools:text="Enter password" />

    <Button
        android:id="@+id/button4"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_x="6dp"
        android:layout_y="417dp"
        android:text="Login" />
</AbsoluteLayout>