        android:text="Password"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_x="6dp"
        android:layout_y="310dp"
